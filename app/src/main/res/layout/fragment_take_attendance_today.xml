<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TakeAttendanceToday">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Friday, November 13th 2016"
            android:id="@+id/text_Time"
            android:layout_margin="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TableLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text_Time"
            android:background="@android:color/white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:baselineAligned="false">

                <TableLayout
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="108"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:id="@+id/header1"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:lines="2"
                            android:background="@android:color/holo_blue_light"
                            android:text="Time" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:id="@+id/header2"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="4"
                            android:lines="2"
                            android:background="@android:color/holo_blue_light"
                            android:text="Subject code" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:id="@+id/header3"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:lines="2"
                            android:background="@android:color/holo_blue_light"
                            android:text="Location" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:id="@+id/header4"
                            android:textColor="@android:color/white"
                            android:layout_weight="3"
                            android:background="@android:color/holo_blue_light"
                            android:lines="2"
                            android:gravity="center"
                            android:text="Status" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:id="@+id/layout_instruction">

            <Button
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_instruction"
                android:text="Instruction">
            </Button>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_above="@+id/layout_instruction"
            android:fillViewport="true"
            android:scrollbarStyle="insideOverlay"
            android:orientation="horizontal"
            android:scrollbars="horizontal|vertical"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_below="@+id/header"
                android:layout_centerHorizontal="true">

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="108"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout3"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2">
                </TableLayout>

                <TableLayout
                    android:id="@+id/tableLayout4"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TableLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>
