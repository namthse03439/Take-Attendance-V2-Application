<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.intern.takeattendanceapplicationv2.Fragment.AttendanceReportByTimeFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScheduleActivity">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeId">

            <LinearLayout
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="FROM"
                    android:visibility="visible">
                </Button>

                <TextView
                    android:id="@+id/text_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Feb, 11/12/2011"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_weight="100"
                    android:textSize="30dp"
                    android:textAlignment="center">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/start_date"
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="TO"
                    android:layout_weight="1">
                </Button>

                <TextView
                    android:id="@+id/text_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Jun, 05/21/2015"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:layout_weight="100"
                    android:textSize="30dp"
                    android:textAlignment="center">

                </TextView>

            </LinearLayout>

        </RelativeLayout>

        <TableLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/timeId"
            android:background="@android:color/white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:baselineAligned="false">

                <TableLayout
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:id="@+id/header1"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:lines="2"
                            android:background="@android:color/holo_blue_light"
                            android:text="Time" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>
                        <TextView
                            android:id="@+id/header2"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="4"
                            android:lines="2"
                            android:background="@android:color/holo_blue_light"
                            android:text="Subject Information" />
                    </TableRow>
                </TableLayout>


            </LinearLayout>
        </TableLayout>

        <ScrollView
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:fillViewport="true"
            android:scrollbarStyle="insideOverlay"
            android:orientation="horizontal"
            android:scrollbars="horizontal|vertical"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_below="@+id/header"
                android:layout_centerHorizontal="true">

                <TableLayout
                    android:id="@+id/tableLayout1"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TableLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>
