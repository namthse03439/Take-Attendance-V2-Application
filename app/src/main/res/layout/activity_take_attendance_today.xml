<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TakeAttendanceTodayActivity">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/titleLayout"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Attendance"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_dark"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_above="@+id/layout_report"
        android:layout_below="@+id/titleLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject name"
                android:textSize="16dp"
                android:lines="2"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject code"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:lines="2"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorded at"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Graphics"
                android:textSize="13dp"
                android:lines="2"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CGG201"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room 202, 2nd Floor, Alpha Building"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:lines="2"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05/23/2016 08:30 AM"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT YET"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_report"
        android:layout_margin="1dp">

        <Button
            android:id="@+id/btn_takeAttendance"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE ATTENDANCE">
        </Button>
    </RelativeLayout>

</RelativeLayout>
